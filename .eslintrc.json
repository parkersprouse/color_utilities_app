{
  "extends": [
    "plugin:@shopify/esnext",
    "plugin:github/recommended",
    "plugin:github/browser",
    "plugin:sonarjs/recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "@shopify",
    "github",
    "sonarjs"
  ],
  "rules": {
    "@babel/object-curly-spacing": [
      "error",
      "always",
      {
        "arraysInObjects": false
      }
    ],
    "curly": ["error", "multi-line"],
    "prettier/prettier": [
      "off",
      {
        "singleQuote": true
      }
    ],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
