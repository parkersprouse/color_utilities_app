{
  "name": "color-utils",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "browserslist": [
    "last 3 Chrome versions",
    "safari 13"
  ],
  "engines": {
    "node": "^18",
    "pnpm": "^8"
  },
  "scripts": {
    "build:linux": "tauri build --target ",
    "build:macos:intel": "tauri build --target x86_64-apple-darwin",
    "build:macos:silicon": "tauri build --target aarch64-apple-darwin",
    "build:windows": "tauri build --target ",
    "dev": "tauri dev",
    "lint:css": "stylelint src/styles/*.css",
    "lint:css:fix": "stylelint --fix src/styles/*.css",
    "lint:js": "eslint --ext .js src/scripts/",
    "lint:js:fix": "eslint --fix --ext .js src/scripts/",
    "start": "pnpm run dev",
    "tauri": "tauri"
  },
  "dependencies": {
    "@fontsource/inter": "^5.0.8",
    "esbuild": "0.19.2",
    "sanitize.css": "^13.0.0"
  },
  "devDependencies": {
    "@shopify/eslint-plugin": "^43.0.0",
    "@tauri-apps/cli": "^1.4.0",
    "autoprefixer": "^10.4.15",
    "browserslist": "^4.21.10",
    "esbuild-plugin-browserslist": "^0.9.0",
    "eslint": "^8.48.0",
    "postcss": "^8.4.28",
    "postcss-preset-env": "^9.1.1",
    "stylelint": "^15.10.3",
    "stylelint-config-clean-order": "^5.2.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-use-nesting": "^4.1.0"
  }
}
