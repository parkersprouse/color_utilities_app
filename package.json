{
  "name": "color-utils",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "browserslist": [
    "last 3 Chrome versions",
    "safari 13"
  ],
  "engines": {
    "node": "^20",
    "pnpm": "^8"
  },
  "scripts": {
    "build": "tauri build",
    "build:macos:intel": "tauri build --target x86_64-apple-darwin",
    "build:macos:silicon": "tauri build --target aarch64-apple-darwin",
    "dev": "tauri dev",
    "lint:css": "stylelint src/**/*.css",
    "lint:css:fix": "stylelint --fix src/**/*.css",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "start": "pnpm run dev",
    "tauri": "tauri"
  },
  "dependencies": {
    "@fontsource/inter": "^5.0.16",
    "@material/web": "^1.1.1",
    "alwan": "^1.4.0",
    "gsap": "^3.12.4",
    "sanitize.css": "^13.0.0",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.0",
    "@stylistic/eslint-plugin": "^1.5.3",
    "@stylistic/stylelint-plugin": "^2.0.0",
    "@tauri-apps/cli": "^1.5.9",
    "autoprefixer": "^10.4.16",
    "browserslist": "^4.22.2",
    "esbuild": "^0.19.11",
    "esbuild-plugin-browserslist": "^0.10.0",
    "eslint": "^8.56.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-import": "^2.29.1",
    "postcss": "^8.4.33",
    "postcss-preset-env": "^9.3.0",
    "stylelint": "^16.1.0",
    "stylelint-config-clean-order": "^5.4.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-use-nesting": "^4.1.0"
  }
}
